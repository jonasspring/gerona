<?xml version="1.0"?>
<!--
Launch the path follower with the kinematic controller for a unicycle robot.
-->
<launch>
    <group ns="path_follower">
        <group ns="controller">
            <!-- parameters, that are dependent of the controller or the robot model -->
            <group ns="unicycle_inputscaling">
                <param name="vehicle_length" value="0.5" />
                <param name="k" value="3.0" />
                <param name="max_angular_velocity" value="1.0" />

		<param name="look_ahead_dist" value="0.5" />
                <param name="k_o" value="0.0" />
                <param name="k_g" value="0.5" />
                <param name="k_w" value="0.5" />
                <param name="k_curv" value="0.01" />
                <param name="obst_threshold" value="3.0" />
            </group>
        </group>
    </group>
</launch>
